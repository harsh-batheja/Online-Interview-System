<%- model_class = Test -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:paper) %>:</strong></dt>
  <dd><%= @test.paper.name+" ("+@test.paper_id.to_s+")" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
  <dd><%= @test.user.fname+" "+@test.user.lname+" ("+@test.user_id.to_s+")" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marks) %>:</strong></dt>
  <dd><%= @test.marks %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_user_paper_tests_path(@test.user,@test.paper), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_test_path(@test), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_test_path(@test),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
