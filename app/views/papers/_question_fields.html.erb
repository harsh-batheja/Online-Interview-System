<div class="question col-lg-offset-1" >
  <div class="form-group">
    <%= f.label :question, :class => 'control-label col-lg-1' %>
    <div class="col-lg-10">
      <%= f.text_field :question, :class => 'form-control' %>
    </div>
    <%= f.link_to_remove image_tag "x.png", size:"10x10"%>
  </div>
  <div class="form-group">
    <%= f.label :duration, :class => 'control-label col-lg-1' %>
    <div class="form-group">
      <div class="col-lg-1">
        <%= f.number_field :hours,min:0,placeholder: "HH",:class => 'form-control',value:0%>
      </div>
      <div class="col-lg-1">
        <%= f.number_field :minutes,within:0..60,placeholder: "MM", :class => 'form-control', value:1%>
      </div>
      <div class="col-lg-1">
        <%= f.number_field :seconds,within:0..60,placeholder: "SS", :class => 'form-control', value:30%>
      </div>
      <div class="col-lg-7">
        <%= f.label :question_type, :class => 'control-label col-lg-3' %>
        <div class="col-lg-9">
          <%= f.select(:qtype, q_types,{},{ :class => 'qtype form-control'})%>
        </div>
      </div>
    </div>
  </div>
  <%= f.fields_for :options, :html => { :class => "form-horizontal" }%>
  <div class="form-group">
    <div class="col-lg-12">
      <%= f.link_to_add "Add an Option", :options, :class => 'add btn btn-primary'%>
    </div>
  </div>
</div>